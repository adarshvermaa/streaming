server {
    listen 80;
    listen [::]:80;
    server_name app.adarshverma.online;  # Your domain
    return 301 https://$server_name$request_uri;  # Redirect HTTP to HTTPS
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name app.adarshverma.online;

    # SSL Configuration (REQUIRED for HTTPS)
    ssl_certificate /etc/letsencrypt/live/app.adarshverma.online/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/app.adarshverma.online/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/app.adarshverma.online/chain.pem;

    # Frontend Configuration
    location / {
        root /home/ubuntu/app/client/dist;
        index index.html;
        try_files $uri $uri/ /index.html;
        
        # Security Headers (Recommended)
        add_header X-Content-Type-Options "nosniff";
        add_header X-Frame-Options "SAMEORIGIN";
        add_header Content-Security-Policy "default-src 'self' https: 'unsafe-inline' 'unsafe-eval';";
    }

    # Backend API Proxy
    location /api/ {  # Changed from /server/ to /api/ for standard practice
        proxy_pass http://localhost:4000/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        
        # Timeout Settings
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # WebSocket Support
    location /ws/ {
        proxy_pass http://localhost:4000/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
    }

    # Static Files
    location /static/ {
        alias /home/ubuntu/app/client/dist/static/;  # Match frontend build path
        expires 365d;
        access_log off;
        add_header Cache-Control "public, immutable";
    }

    # Gzip Compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 6;

    # Logging
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    # Error Handling (Frontend-only)
    error_page 404 /index.html;
    location = /index.html {
        internal;
    }
}